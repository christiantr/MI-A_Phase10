                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@android:drawable/presence_online" />

                    <TextView
                        android:id="@+id/PHASE_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/benchnine"
                        android:text="1 Fünfling + 1 Drilling"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/ID_phase_label3"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:ellipsize="start"
                android:fontFamily="@font/benchnine"
                android:text="aktuelle Phase"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toTopOf="@+id/ID_score"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/ID_phase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/benchnine"
                android:text="3"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toTopOf="@+id/ID_more"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/ID_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:fontFamily="@font/benchnine"
                android:paddingTop="0dp"
                android:text="mehr"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
